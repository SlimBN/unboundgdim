<!DOCTYPE html>
<html>
<head>
  <title>Unbound</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <header id="navbar">
    	<div class="logo">
    		<%= link_to "Unbound", root_url %>
    	</div>

    	<div class="menu">
        	<% if current_user %>
	          	<div>
	            	<%= link_to "Edit Profile (" + current_user.email + ")", edit_user_path(current_user.id) %>
	          	</div>
	          	<div>
	            	<%= link_to "Logout", :logout %>
	            </div>
        	<% else %>
          		<div>
            		<%= link_to "Register", :register %>
	          	</div>
	          	<div>
	            	<%= link_to "Login", :login %>
	           	</div>
	        <% end %>
	    </div>
	</header>

	<div id="container">

		<div>
        <p id="notice"> <%= notice %> </p>
        <p id="alert"> <%= alert %> </p>
       	</div>


<%= yield %>

	</div>

</body>
</html>
